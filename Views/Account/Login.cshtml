@model LoginViewModel;

<section class="vh-100">
    <div class="container-fluid">
        <div class="row shadow-lg">
            <div class="col-sm-6 text-black">
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form method="post" asp-action="Login" style="width: 23rem;">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <h3 class="fw-normal mb-3 pb-3 text-center" style="letter-spacing: 1px;">Login</h3>

                        <div class="form-outline mb-4">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <input type="text" asp-for="UserName" id="form2Example18" class="form-control form-control-lg" />
                            <label asp-for="UserName" class="form-label">Username</label>

                        </div>

                        <div class="form-outline mb-4">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <input type="password" asp-for="Password" id="form2Example28" class="form-control form-control-lg" />
                            <label asp-for="Password" class="form-label">Password</label>

                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-success btn-lg btn-block text-center" type="submit">Login</button>
                        </div>

                        <p>Don't have an account? <a asp-action="Register" asp-controller="Account" class="link-info">Register here</a></p>

                    </form>

                </div>
            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://media.istockphoto.com/id/639636168/photo/cocktails-drinks-on-bar.jpg?s=612x612&w=0&k=20&c=IKqazcAxDfW6ON6jC1Q1r4ZvJFIIhpV5JOcWBHuD23M="
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>