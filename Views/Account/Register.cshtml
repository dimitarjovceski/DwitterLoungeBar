@model LoginViewModel;

<section class="vh-100">
    <div class="container-fluid">
        <div class="row shadow-lg container">
            <div class="text-black text-center col-md-3 offset-md-3">
                <div class="align-items-center px-5 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form method="post" asp-action="Register" style="width: 23rem;">

                        <h3 class="fw-normal mb-3 pb-3 text-center" style="letter-spacing: 1px;">Register</h3>

                        <div class="form-outline mb-4">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <input type="text" asp-for="UserName" id="form2Example18" class="form-control form-control-lg" />
                            <label asp-for="UserName" class="form-label">Username</label>

                        </div>

                        <div class="form-outline mb-4">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <input type="password" asp-for="Password" id="form2Example28" class="form-control form-control-lg" />
                            <label asp-for="Password" class="form-label">Password</label>

                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-success btn-lg btn-block" type="submit">Register</button>
                        </div>

                        <p>Have an account? <a asp-action="Login" asp-controller="Account" class="link-info">Login here</a></p>

                    </form>

                </div>

            </div>
        </div>
    </div>
</section>