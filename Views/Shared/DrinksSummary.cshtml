@model Drink;


 <div class="d-inline-flex justify-content-center">
 <div class="card mx-2 my-2 shadow-lg" style="width: 18rem;">
 <img class="img-thumbnail" style="max-height: 300px;" src="@Model.ImageThumbnailUrl" alt="@Model.ImageUrl">
 <div class="card-body">
 <h5 class="card-title text-center">@Model.Name</h5>
<span class="d-inline-flex">@Model.Price $</span>
 <p class="card-text mt-2">@Model.ShortDescription</p>
  </div>
        <div class="text-center mb-2">
            <a class="btn btn-success" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-drinkId="@Model.DrinkId">
                Add to cart
            </a>
        </div>
  </div>
 
  </div>